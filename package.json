{
  "name": "fruit_shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cd apps/web && next dev",
    "build": "pnpm build:libs && pnpm nx build web",
    "build:libs": "nx run-many -t build --projects=domain,infrastructure,hooks,ui-components",
    "build:all": "nx run-many -t build",
    "start": "cd dist/apps/web && next start",
    "lint": "nx lint web",
    "test": "nx test web",
    "test:watch": "nx test web --watch",
    "test:coverage": "nx test web --coverage",
    "test:core": "nx test domain && nx test infrastructure && nx test hooks",
    "server": "pnpm exec nx start server",
    "server:dev": "pnpm exec nx dev server",
    "server:install": "cd apps/server && npm install",
    "deploy": "vercel --prod",
    "preview": "vercel",
    "ci:install": "pnpm install --frozen-lockfile || pnpm install --no-frozen-lockfile"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-portal": "^1.1.9",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv-cli": "^8.0.0",
    "lucide-react": "^0.525.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.60.0",
    "react-query": "^3.39.3",
    "use-debounce": "^10.0.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@nx/eslint": "^21.3.9",
    "@nx/jest": "^21.3.9",
    "@nx/next": "^21.3.9",
    "@nx/react": "^21.3.9",
    "@nx/vite": "^21.3.9",
    "@nx/workspace": "^21.3.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "express": "^4.18.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "json-server": "^0.17.0",
    "nx": "^21.3.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "typescript": "^5.4.5",
    "vercel": "^44.6.4",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  }
}